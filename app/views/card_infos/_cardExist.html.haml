/クレジットカード情報がある場合の画面 カード情報を表示
.content
  .content__credit
    %h2.credit-head
      ="支払い方法"
    .credit-inner
      %section
        .credit-content
          .sub-credit-head
            ="クレジットカード一覧"
        .payment-content
          %ul
            %li
              .payment-inside
                = image_tag "#{@card_src}", size: "34x20", alt: @card_brand, class: ".image"
                .payment-num
                  = "**** **** **** " + @default_card_information.last4
                .payment-num
                  - exp_month = @default_card_information.exp_month.to_s
                  - exp_year = @default_card_information.exp_year.to_s.slice(2,3)
                  = exp_month + " / " + exp_year
                = link_to "削除する", user_card_info_path, method: :delete, class: "button payment-remove"

          .setting-register
            .setting-register-block
              .payment-notice
                ="支払い方法について"
                %i.fa.fa-angle-right

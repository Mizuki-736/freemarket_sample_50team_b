%header.header
  .header__contents
    .header__contents__ber
      = link_to image_tag("logo.png"), root_path, class:"header__contents__ber-logo"
      .header__contents__ber-search
        = form_tag root_path, method: :get, class: "header__contents__ber__search__form" do
          = text_field_tag :keyword, '', class: 'search__box-text', placeholder: '何かお探しですか？'
        %i.fa.fa-search.font-search
    .header__contents__nav
      .header__contents__nav__left
        %a.header__contents__nav__left-link{href: root_path}
          %i.fa.fa-list.header__contents__nav__left-link-icon
          .header__contents__nav__left-link-text
            カテゴリーから探す                                                                                                                     
        %a.header__contents__nav__left-link{href: root_path}
          %i.fa.fa-tag.header__contents__nav__left-link-icon
          .header__contents__nav__left-link-text
            ブランドから探す
      .header__contents__nav__right
        = link_to "ログイン", '', class: "btn btn-red header__contents__nav__right-login"
        = link_to "新規会員登録", '' , class: "btn btn-signup header__contents__nav__right-register"

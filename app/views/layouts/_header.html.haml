%header.header
  .header__contents
    .header__contents__ber
      = link_to image_tag("logo.png"), root_path, class:"header__contents__ber-logo"
      .header__contents__ber-search
        = form_tag root_path, method: :get, class: "header__contents__ber__search__form" do
          = text_field_tag :keyword, '', class: 'search__box-text', placeholder: '何かお探しですか？'
        %i.fa.fa-search.font-search
    .header__contents__nav
      .header__contents__nav__left
        %a.header__contents__nav__left-category{href: root_path}
          %i.fa.fa-list.header__contents__nav__left-category-icon
          .header__contents__nav__left-category-text
            カテゴリーから探す
        %ul.header__contents__nav__left-categories
          - @categories.each do |category|
            %li.header__contents__nav__left-categories-list
              = category.name
              -# %ul.level-2
              -#   - category.children.each do |child|
              -#     %li.level-2__list
              -#       = child.name
              -#       %ul.level-3
              -#         - child.children.each do |grandchild|
              -#           %li.level-3__list
              -#             = grandchild.name

        %a.header__contents__nav__left-brand{href: root_path}
          %i.fa.fa-tag.header__contents__nav__left-brand-icon
          .header__contents__nav__left-brand-text
            ブランドから探す
        %ul.header__contents__nav__left-brands
          %li.header__contents__nav__left-brands-list
            シャネル
          %li.header__contents__nav__left-brands-list
            ナイキ
          %li.header__contents__nav__left-brands-list
            ルイ ヴィトン
          %li.header__contents__nav__left-brands-list
            シュプリーム
          %li.header__contents__nav__left-brands-list
            アディダス
          %li.header__contents__nav__left-brands-list
            ブランド一覧

      .header__contents__nav__right
        -if user_signed_in?
          %a.header__contents__nav__right-notifications
            %i.fa.fa-bell-o.icon
            お知らせ
          %a.header__contents__nav__right-todo
            %i.fa.fa-check.icon
            やることリスト
          %a.header__contents__nav__right-mypage{href: user_path(current_user.id)}
            %img.header__contents__nav__right-mypage-img{src: "https://static.mercdn.net/images/member_photo_noimage_thumb.png"}/            
            マイページ
        -else
          = link_to "ログイン", new_user_session_path, class: "btn btn-red header__contents__nav__right-login"
          = link_to "新規会員登録",  new_user_path, class: "btn btn-signup header__contents__nav__right-register"

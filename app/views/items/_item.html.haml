%section.items
  %h3.items__text
    %a.items__text-link
      新着アイテム
  .items__box
    .items__box__content
      %a.item__page
        .item__page-photo
          -# = image_tag item.image
        .item__page__body
          %h3.item__page__body-name
            = item.name
          .item__page__body-price
            = item.price
            .favourite
              %i.fa.fa-heart-o.like
              %span 
          %p.item__page__body-tax
            (税込)

  .items__all
    = link_to "全ての商品を見る", root_path, class:"items__all-link"
   


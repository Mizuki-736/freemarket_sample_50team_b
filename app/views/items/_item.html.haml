.items__box__content
  = link_to item_path(item.id), class:"item__page" do
    .item__page-photo
      = image_tag item.images.first.image.url,size:"230x220"
    .item__page__body
      %h3.item__page__body-name
        = item.name
      .item__page__body-price
        = "¥" + number_with_delimiter(item.price)
        .favourite
          %i.fa.fa-heart-o.like
          %span 
            46
      %p.item__page__body-tax
        (税込)
.items__all
  = link_to "全ての商品を見る", '#', class:"items__all-link"
